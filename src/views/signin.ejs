<%- layout('layouts/main.ejs') %>

    <body class="fondo">
        <div class="container">
            <div class="logo">
            </div>
            <form class="formulario" action="/signin" method="POST">
                <h2>Sistema Punto de venta</h2>
                <p>
                    Coloque usuario y contraseña para acceder al sistema
                </p>
                <div class="acceso">
                    <label for="username">Correo Electonico</label>
                    <input type="email" id="username" name="email" class="box" placeholder="Coloque su email" required>
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" class="box"
                        placeholder="Coloque su  contraseña" required>

                    <button type="submit" class="btn btn-primary btn-block mt-4">
                        Enviar
                    </button>
                </div>
            </form>
        </div>
    </body>