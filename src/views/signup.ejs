<%- layout('layouts/main.ejs') %>

    <body class="fondo">
        <div class="container">
            <div class="logo">

            </div>

            <form class="formulario" action="/signup" method="POST">
                <h2>Registro</h2>
                <p>
                    Registre su correo para crear un unicio de seccion
                </p>
                <div>
                    <div class="acceso">
                        <label for="name">Nombre</label>
                        <input type="text" id="name" name="name" class="box" placeholder="Coloque su nombre" required>
                        <label for="username">Correo Electonico</label>
                        <input type="email" id="username" name="email" class="box" placeholder="Coloque su email" required>
                        <label for="password">Contraseña</label>
                        <input type="password" id="password" name="password" class="box" placeholder="Coloque su  contraseña" required>

                        <button type="submit" class="btn btn-primary btn-block mt-4">
                            Enviar
                        </button>
                    </div>
                </div>
            </form>

        </div>
    </body>